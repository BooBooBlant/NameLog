---
import Page from "@/layouts/Page.astro";
import Layout from "@/layouts/Layout.astro";
import Copyable from "@components/Copyable.astro";
import Tooltiped from "@components/Tooltiped.astro";
import { Code } from "astro:components";
import TextAlignSwitcher from "@components/control/TextAlignSwitcher.astro";
import AnimatedCube from "@components/zoodogood/AnimatedCube.astro";
const id = `id_${crypto.randomUUID()}`;
import { globalProps } from "@lib/globalProps.js";

globalProps.page_section = "guides";
