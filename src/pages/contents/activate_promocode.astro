---
import Page from "../../layouts/Page.astro";
import Layout from "../../layouts/Layout.astro";
import {globalProps} from '@lib/globalProps.js';

globalProps.page_section = "games";
---

<Page>
  <Layout>
    <h1 style="margin-top: 30px; margin-left: 20px;">Бонусы</h1>
    <h4 style="margin-top: 50px; margin-left: 20px;">Активировать промокод:</h4>
    <div class="my-form-wrapper">
      <form class="my-form">
        <label>
          <input
            type="text"
            name="user-code"
            placeholder="Введите код"
            required
          />
        </label>
        <button type="submit">Активировать</button>
      </form>
      <div class="my-image">
        <picture></picture>
      </div>
    </div>
  </Layout>
</Page>

<style>
  .my-form-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
  }

  .my-form-wrapper .my-form {
    display: flex;
    margin-top: 10px;
  }

  .my-form-wrapper .my-form input {
    border: 1px solid #000;
    padding: 8px 10px;
    border-radius: 4px 0 0 4px;
  }

  .my-form-wrapper .my-form button {
    border-radius: 0 4px 4px 0;
    background-color: #f44336;
    color: white;
    border: 1px solid #f44336;
    padding: 5px 20px;
    cursor: pointer;
  }

  .my-image {
    margin-left: 10px;
    display: none;
  }
</style>

<script is:inline>
  (async () => {
    const response = await fetch("/api/activate_promocode", {
      method: "POST",
      headers: {
        "x-name": encodeURIComponent("enot"),
        "x-promocode": encodeURIComponent("123"),
      },
    });

    console.log(await response.text());
  })();
</script>
