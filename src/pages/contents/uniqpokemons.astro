---
import Page from "../../layouts/Page.astro";
import Layout from "../../layouts/Layout.astro";
import { globalProps } from "@lib/globalProps.js";

globalProps.page_section = "guides";

const Types = {
  Dark: {
    key: "Dark",
    label: "DARK",
  },
  Psych: {
    key: "Psych",
    label: "PSYCH",
  },
};
const Pokemons = [
  {
    name: "Darkdevoir",
    picture: "/images/darkdevo.png",
    types: [Types.Dark, Types.Psych],
    id: 1001,
    weight: 50.5,
    height: 1.5,
    abilities: ["Плохие сны", "След", "Оворожение"],
    location: "???",
    wayof: [
      "Легендарные рейды",
      "Турниры(ключ)",
      "ПокеВопросы(ключ)",
      "Аукционы",
    ],
    breeding: ["???"],
    types_multipliers: {
      NORM: null,
      FIRE: null,
      WATER: null,
      ELECTR: null,
      GRASS: "0.5",
      ICE: null,
      FIGHT: null,
      POISON: "x2",
      GROUN: null,
      FLY: null,
      PSYCH: null,
      BUG: "0",
      ROCK: null,
      GHOST: "0.5",
      DRAGO: null,
      DARK: null,
      STEEL: "x2",
      FAIRY: null,
    },
    data: {
      xp: 95,
      attack: 95,
      defence: 80,
      SP_attack: 165,
      SP_defence: 140,
      speed: 140,
    },
  },
];
---

<Page>
  <Layout>
    <header>
      Список уникальных покемонов:
      <ul style="list-style: none;">
        {
          Pokemons.map((pokemon) => (
            <li>
              <a
                href={`#${pokemon.id}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                {pokemon.name}
              </a>
            </li>
          ))
        }
      </ul>
    </header>

    {
      (() =>
        Pokemons.map((pokemon) => (
          <aside>
            <element-columns style="flex-wrap: wrap; gap: 40px">
              {/* MARK: Image */}
              <element-rows style="gap: 40px">
                <img
                  loading="lazy"
                  style="width: 350px; height: 250px;"
                  src={pokemon.picture}
                  alt=""
                />

                <b>
                  Номер в дексе: <i>#{pokemon.id}</i>
                </b>
              </element-rows>

              {/* Specs */}
              <table>
                <tr>
                  <td>Тип:</td>
                  <td>
                    {pokemon.types.map((type) => (
                      <span class={`type-badge ${type.key.toLowerCase()}`}>
                        {type.label}
                      </span>
                    ))}
                  </td>
                </tr>
                <tr>
                  <td>Рост:</td>
                  <td>
                    <i>{pokemon.height} М</i>
                  </td>
                </tr>
                <tr>
                  <td>Вес:</td>
                  <td>
                    <i>{pokemon.weight} кг</i>
                  </td>
                </tr>
                <tr>
                  <td>Абилки:</td>
                  <td>
                    {pokemon.abilities.map((ability) => (
                      <li>{ability}</li>
                    ))}
                  </td>
                </tr>
                <tr>
                  <td>Обитает:</td>
                  <td>
                    <i>{pokemon.location}</i>
                  </td>
                </tr>
              </table>

              {/* MARK: Wayof */}
              <section>
                <h2>
                  <b>Способ получения:</b>
                </h2>
                <ol>
                  {pokemon.wayof.map((way) => (
                    <li>{way}</li>
                  ))}
                </ol>
              </section>
              {/* MARK: Breeding */}
              <section>
                <h2>
                  <b>Разведение:</b>
                </h2>
                <ul>
                  {pokemon.breeding.map((way) => (
                    <li>{way}</li>
                  ))}
                </ul>
              </section>
            </element-columns>
            <>
              <hr />
              <br />
            </>
            <element-rows>
              <div class="slider-container">
                <span class="slider-label">XP</span>
                <>
                  <div class="slider" style="width: calc(95px);" />
                  <b>95</b>
                </>
              </div>

              <div class="slider-container">
                <span class="slider-label">Атака</span>
                <>
                  <div class="slider" style="width: calc(95px);" />
                  <b>95</b>
                </>
              </div>

              <div class="slider-container">
                <span class="slider-label">Дэф</span>
                <>
                  <div class="slider" style="width: calc(80px);" />
                  <b>80</b>
                </>
              </div>

              <div class="slider-container">
                <span class="slider-label">СП Атака</span>
                <>
                  <div class="slider" style="width: calc(165px);" />
                  <b>165</b>
                </>
              </div>

              <div class="slider-container">
                <span class="slider-label">СП Дэф</span>
                <>
                  <div class="slider" style="width: calc(90px);" />
                  <b>90</b>
                </>
              </div>

              <div class="slider-container">
                <span class="slider-label">Скорость</span>
                <>
                  <div class="slider" style="width: calc(140px);" />
                  <b>140</b>
                </>
              </div>
            </element-rows>
            <>
              <hr />
              <br />
            </>
            <element-group class="types_table">
              {Object.keys(pokemon.types_multipliers).map((type) => (
                <div class={`type-box ${type}`}>{type}</div>
              ))}
              {Object.values(pokemon.types_multipliers).map((value) => (
                <div class={`type-box ${value}`}>{value}</div>
              ))}
            </element-group>
          </aside>
        )))()
    }
    <span class="line"></span>

    <aside>
      <element-columns style="flex-wrap: wrap; gap: 40px">
        <element-rows>
          <img
            loading="lazy"
            style="width: 350px; height: 250px;"
            src="/images/darkdevo.png"
            alt=""
          />
          <br /><b>Номер в дексе: <i>#1001</i></b>
        </element-rows>
        <element-columns
          style="flex-wrap: wrap; justify-content: space-between; gap: 40px"
        >
          <div>
            <ul
              style="text-align: left; list-style-type: none; padding-left: 0;"
            >
              <li>
                Тип: <span class="type-badge dark" style="margin-left: 20px;"
                  >DARK</span
                >
                <span class="type-badge psych">PSYCH</span>
              </li>
              <pre
                style="font-family: inherit; font-size: inherit; margin:0">Рост:          <i>1.50М</i></pre>
            </ul>
            <li>
              <pre
                style="font-family: inherit; font-size: inherit; margin:0">Вес:           <i>50.5кг</i></pre>
            </li>
            <li style="display: flex; align-items: center">
              <span style="margin-right: 15px;">Абилки:</span>
              <div style="display: flex; flex-direction: column;">
                <span>Плохие сны</span>
                <span>След</span>
                <span>Оворожение</span>
              </div>
            </li>
            <li>
              <pre
                style="font-family: inherit; font-size: inherit; margin:0">Обитает:  <i>???</i></pre>
            </li>
          </div>
        </element-columns>
        <div>
          <h2><b>Способ получения:</b></h2>
          <ol>
            <li>Легендарные рейды</li>
            <li>Турниры(ключ)</li>
            <li>ПокеВопросы(ключ)</li>
            <li>Аукционы</li>
          </ol>
        </div>
        <div>
          <h2><b>Разведение:</b></h2>
          <ul>
            <li>???</li>
          </ul>
        </div>
      </element-columns>

      <hr /><br />
      <element-rows>
        <div class="slider-container">
          <span class="slider-label">XP</span>
          <div class="slider" style="width: calc(95px);"></div><b>95</b>
        </div>

        <div class="slider-container">
          <span class="slider-label">Атака</span>
          <div class="slider" style="width: calc(95px);"></div><b>95</b>
        </div>

        <div class="slider-container">
          <span class="slider-label">Дэф</span>
          <div class="slider" style="width: calc(80px);"></div><b>80</b>
        </div>

        <div class="slider-container">
          <span class="slider-label">СП Атака</span>
          <div class="slider" style="width: calc(165px);"></div><b>165</b>
        </div>

        <div class="slider-container">
          <span class="slider-label">СП Дэф</span>
          <div class="slider" style="width: calc(90px);"></div><b>90</b>
        </div>

        <div class="slider-container">
          <span class="slider-label">Скорость</span>
          <div class="slider" style="width: calc(140px);"></div><b>140</b>
        </div>
      </element-rows>
      <hr /><br />
      <element-group class="types_table">
        <div class="container">
          <div class="type-box NORM">NORM</div>
          <div class="type-box FIRE">FIRE</div>
          <div class="type-box WATER">WATER</div>
          <div class="type-box ELECTR">ELECTR</div>
          <div class="type-box GRASS">GRASS</div>
          <div class="type-box ICE">ICE</div>
          <div class="type-box FIGHT">FIGHT</div>
          <div class="type-box POISON">POISON</div>
          <div class="type-box GROUN">GROUN</div>

          <div class="type-box FLY">FLY</div>
          <div class="type-box PSYCH">PSYCH</div>
          <div class="type-box BUG">BUG</div>
          <div class="type-box ROCK">ROCK</div>
          <div class="type-box GHOST">GHOST</div>
          <div class="type-box DRAGO">DRAGO</div>
          <div class="type-box DARK">DARK</div>
          <div class="type-box STEEL">STEEL</div>
          <div class="type-box FAIRY">FAIRY</div>

          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box x05">0.5</div>
          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box x2">x2</div>
          <div class="type-box empty"></div>

          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box x0">0</div>
          <div class="type-box empty"></div>
          <div class="type-box x05">0.5</div>
          <div class="type-box empty"></div>
          <div class="type-box empty"></div>
          <div class="type-box x2">x2</div>
          <div class="type-box empty"></div>
        </div>
      </element-group>
    </aside>
  </Layout>
</Page>

<style>
  .type-badge {
    display: inline-block;
    padding: 2px 5px;
    border-radius: 5px;
    font-weight: bold;
    font-size: 0.8em;
    text-transform: uppercase;
    margin-right: 5px;
  }

  .dark {
    background-color: #a98a78;
  }

  .psych {
    background-color: #ee99ac;
  }

  .card li {
    list-style: none;
  }

  .slider-container {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .slider-label {
    width: 100px;
    margin-right: 10px;
  }

  .slider {
    height: 15px;
    background-color: gold;
    margin-right: 10px;
    border-radius: 5px;
    border: 2px solid grey;
    box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.5);
  }

  .slider-value {
    width: 40px;
  }

  .types_table {
    display: grid;
    --size: 1em;

    grid-template-columns: repeat(18, 60px);
    grid-template-rows: repeat(2, 60px);
    gap: 1px;
  }

  .container {
    display: grid;
    grid-template-columns: repeat(18, 60px);
    grid-template-rows: repeat(2, 60px);
    gap: 1px;
  }

  .type-box {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 10px;
    border-radius: 5px;
  }

  .NORM {
    background-color: #a8a77a;
  }
  .FIRE {
    background-color: #ee8130;
  }
  .WATER {
    background-color: #6390f0;
  }
  .ELECTR {
    background-color: #f7d057;
  }
  .GRASS {
    background-color: #7ac74c;
  }
  .ICE {
    background-color: #96d9d6;
  }
  .FIGHT {
    background-color: #c22e28;
  }
  .POISON {
    background-color: #a33ea1;
  }
  .GROUN {
    background-color: #e2bf65;
  }
  .FLY {
    background-color: #a98ff3;
  }
  .PSYCH {
    background-color: #ee99ac;
  }
  .BUG {
    background-color: #a6b91a;
  }
  .ROCK {
    background-color: #b6a136;
  }
  .GHOST {
    background-color: #735797;
  }
  .DRAGO {
    background-color: #6f35fc;
  }
  .DARK {
    background-color: #a98a78;
  }
  .STEEL {
    background-color: #b7b7ce;
  }
  .FAIRY {
    background-color: #d685ad;
  }

  .x2 {
    background-color: #7ac74c;
    color: white;
  }
  .x0 {
    background-color: #606060;
    color: white;
  }
  .x05 {
    background-color: #c22e28;
    color: white;
  }
  .x025 {
    background-color: #a04338;
    color: white;
  }
  .empty {
    background-color: transparent;
    color: transparent;
  }

  ol li {
    list-style: inherit;
    list-style-position: inside;
  }
  li {
    list-style-position: inside;
    list-style: none;
  }
</style>
